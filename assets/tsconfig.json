{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "postcss.config.js",
    "tailwind.config.js",
    "webpack.common.js",
    "webpack.dev.js",
    "webpack.prod.js"
  ]
}
